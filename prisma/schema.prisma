generator client {
  provider = "prisma-client"
  output   = "../.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Booking {
  id                  Int          @id @default(autoincrement())
  driverName          String
  vehicleNumber       String
  email               String?
  phoneNumber         String
  idNumber            String
  parkingSpot         String
  vehicleType         String       @default("Car")
  entryTime           DateTime
  expectedExitTime    DateTime
  actualExitTime      DateTime?
  paymentMethod       String       @default("Cash")
  totalCost           Float?
  paymentStatus       PaymentStatus @default(PENDING)
  bookingStatus       BookingStatus @default(PENDING)
  notes               String?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// Keep these for reference but they're optional
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}

model Vehicle {
  id           Int    @id @default(autoincrement())
  licensePlate String @unique
  make         String
  model        String
  color        String?
}

model ParkingLot {
  id       Int           @id @default(autoincrement())
  name     String
  location String
  capacity Int
}

model ParkingSpot {
  id         Int     @id @default(autoincrement())
  lotId      Int
  spotNumber String
  status     SpotStatus  @default(AVAILABLE)
}

enum SpotStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
  MAINTENANCE
}
